<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_radius"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_dialog_two_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:textColor="@color/black"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="20dp"
        >

        <android.widget.Button
            android:id="@+id/btn_usual_dialog_cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_btn_light_navy_line"
            android:text="@string/cancel"
            android:textColor="@color/light_navy_theme"

            android:layout_margin="5dp"

            />

        <android.widget.Button
            android:id="@+id/btn_usual_dialog_confirm"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_btn_light_navy"
            android:text="@string/confirm"
            android:textColor="@color/white"

            android:layout_margin="5dp"

            />



    </LinearLayout>

</LinearLayout>